<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaTests.Views.ErrorDialogWindow"
        Title="{Binding Title}"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE5E5" Offset="0"/>
            <GradientStop Color="#FFCCCC" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <StackPanel Margin="30" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding ErrorIcon, StringFormat='{}{0} {1}', FallbackValue='?'}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Foreground="#D32F2F"/>
        
        <TextBlock Text="{Binding Title}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Foreground="#D32F2F"/>
        
        <TextBlock Text="{Binding Message}" 
                   FontSize="14" 
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="#424242"/>
        
        <Button Command="{Binding OkCommand}"
                Content="OK"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"
                Background="#D32F2F"
                Foreground="White"
                FontWeight="SemiBold"
                CornerRadius="8"/>
    </StackPanel>
</Window>