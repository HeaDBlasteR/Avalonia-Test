<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaTests.Views.ResultsListWindow"
        x:DataType="vm:ResultsListViewModel"
        xmlns:vm="clr-namespace:AvaloniaTests.ViewModels"
        Width="850"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Icon="C:\Users\nozdr\source\repos\TestsAvaloniaMVVM\AvaloniaTests\Assets\Pudje.jpg"
        Title="Результаты тестов"
        Background="#FFF5E6CC"
        Foreground="Black"
        FontFamily="Segoe UI,avares://Avalonia.Fonts.Inter/Assets#Inter">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Результаты прохождения тестов" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Results Count -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding ResultsCount, StringFormat='Найдено результатов: {0}', FallbackValue='Найдено результатов: 0'}" 
                   HorizontalAlignment="Center" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="2" 
                  Name="ResultsDataGrid"
                  ItemsSource="{Binding Results}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  Background="White"
                  SelectionMode="Single"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" 
                                    Binding="{Binding UserName}" 
                                    Width="120"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Тест" 
                                    Binding="{Binding TestTitle}" 
                                    Width="180"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Результат" 
                                    Binding="{Binding Score}" 
                                    Width="80"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Процент" 
                                    Binding="{Binding Percentage, StringFormat={}{0}%}" 
                                    Width="70"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Дата прохождения" 
                                    Binding="{Binding CompletionDate}" 
                                    Width="130"
                                    IsReadOnly="True"/>
                
                <DataGridTemplateColumn Header="Действия" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="vm:TestResultDisplayItem">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="Подробно" 
                                        Command="{Binding $parent[DataGrid].((vm:ResultsListViewModel)DataContext).ViewResultCommand}"
                                        CommandParameter="{Binding}"
                                        Background="#FF4CAF50"
                                        Foreground="White"
                                        Margin="2"
                                        Padding="8,4"
                                        FontSize="12"/>
                                <Button Content="Удалить" 
                                        Command="{Binding $parent[DataGrid].((vm:ResultsListViewModel)DataContext).DeleteResultCommand}"
                                        CommandParameter="{Binding}"
                                        Background="#FFF44336"
                                        Foreground="White"
                                        Margin="2"
                                        Padding="8,4"
                                        FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0" 
                    Spacing="10">
            
            <Button Content="Обновить" 
                    Command="{Binding RefreshCommand}"
                    Background="#FF2196F3"
                    Foreground="White"
                    Padding="20,10"
                    FontSize="14"/>
            
            <Button Content="Закрыть" 
                    Command="{Binding CloseCommand}"
                    Background="#FF757575"
                    Foreground="White"
                    Padding="20,10"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>