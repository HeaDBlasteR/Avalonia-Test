<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:AvaloniaTests.Converters"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        x:DataType="vm:ResultViewModel"
        xmlns:vm="clr-namespace:AvaloniaTests.ViewModels"
		Icon="C:\Users\nozdr\source\repos\TestsAvaloniaMVVM\AvaloniaTests\Assets\Pudje.jpg"
        Title="Ебучие Результаты Теста"
		Background="#FFF5E6CC"
        Foreground="Black">

    <Window.Resources>
        <converters:AnswerStatusConverter x:Key="AnswerStatusConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding Result.UserName}" FontSize="16"/>
            <TextBlock Text="{Binding Result.CompletionDate, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}"/>
            <TextBlock Text="{Binding Result.Score, StringFormat='Баллы: {0}/{1}'}"
                       FontSize="20" FontWeight="Bold" Margin="0,10"/>

            <DataGrid ItemsSource="{Binding Test.Questions}" AutoGenerateColumns="False" Margin="0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Статус"
                        Binding="{Binding ., Converter={StaticResource AnswerStatusConverter}}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>