<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaTests.Views.ResultWindow"
        Title="Результаты теста"
		Icon="avares://AvaloniaTests/Assets/Pudge.jpg"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#FFF5E6CC"
        Foreground="Black">

    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel Spacing="15">
                <TextBlock Text="Результат прохождения теста" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <Border Background="LightYellow" 
                        Padding="15" 
                        CornerRadius="8" 
                        BorderBrush="Gray" 
                        BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding TestTitle, StringFormat='Тест: {0}'}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding UserName, StringFormat='Пользователь: {0}'}" 
                                   FontSize="16"/>
                        <TextBlock Text="{Binding CompletionDate, StringFormat='Дата прохождения: {0}'}" 
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Score, StringFormat='Результат: {0}'}" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#FF4CAF50"/>
                        <TextBlock Text="{Binding Percentage, StringFormat='Процент правильных ответов: {0}%'}" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#FF2196F3"/>
                    </StackPanel>
                </Border>

                <Border Background="White" 
                        Padding="15" 
                        CornerRadius="8" 
                        BorderBrush="Gray" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Детали теста:" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TestDescription}" 
                                   FontSize="14" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <Button Content="Закрыть" 
                        HorizontalAlignment="Center"
						Classes="HighlightedButton"
                        Width="120" 
                        Height="35"
                        Background="#FF757575"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        CornerRadius="6"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>